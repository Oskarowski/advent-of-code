{
    "compilerOptions": {
        "target": "esnext",
        "lib": ["ESNext"],
        "module": "preserve",
        "moduleDetection": "force",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": false,
        "sourceMap": true,
        "skipLibCheck": true,
        "outDir": "./dist",

        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "verbatimModuleSyntax": true,
        "noEmit": true
    },
    "exclude": ["node_modules", "dist"]
}
